[MASTER]
# load-plugins=pylint_django,pylint_celery
# django-settings-module=path.to.settings

[MESSAGES CONTROL]
disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        missing-docstring,
        invalid-name,
        too-many-statements,
        too-many-locals,
        too-few-public-methods,
        wrong-import-order,
        too-many-return-statements,
        too-many-branches,
        too-many-ancestors,
        too-many-lines,
        too-many-public-methods,
        too-many-instance,attributes,
        duplicate-code,
        protected-access,
        unused-argument,
        no-value-for-parameter,
        attribute-defined-outside-init,
        too-many-nested-blocks,
        redefined-argument-from-local,
        cyclic-import,
        import-outside-toplevel,
        ungrouped-imports,
        line-too-long,
        too-many-boolean-expressions

[FORMAT]
max-line-length=120
